<!doctype html>
<html lang="pt">
	<head>
		<!-- Meta Tags -->
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
		<meta name="author" content="<% for post in @getFilesAtPath("autores").toJSON(): %><%- post.name %>, <% end %>">
		<meta name="description" content="Outras formas de entender a web">
		<meta name="keywords" content="desenvolvimento web, front-end, back-end, html5, css3, javascript, php, libraries, frameworks">
		<meta name="robots" content="index">
		<!-- Title -->
	    <title><%= @document.title %></title>
	    <!-- Stylecheets -->
	    <link rel="stylesheet" href="../assets/css/master.css">
	    <link rel="stylesheet" href="../assets/css/phone.css" media="screen and (max-width:480px)">
	    <link rel="stylesheet" href="../assets/css/monokai.css">
	</head>
	<body>
		<!--INICIO-->
		<div id="search"></div>
		<!-- Inicio do Wrap -->
		<div id="wrap">
			<header>
				<div class="tit" id="ani1"><h1><a href="../index.html">WEBVISÃO</a></h1></div>
					<nav id="ani2">
						<ul>
							<li><a href="../arquivo.html">ARQUIVO</a></li>
							<li><a href="../sobre.html">SOBRE</a></li>
						</ul>
					</nav>
					<div class="like">
						<a href="https://www.facebook.com/pages/WebVis%C3%A3o/449858405037749" target="blank">
							<div></div>
						</a>
					</div>
			</header>
		</div>
		<!-- Fim do wrap -->
		<!-- Conteúdo -->
		<div class="wrap2">
			<section id="conteudo">
				<article class="post-full">
					<h2><%- @document.title %></h2>
					<div class="post-img">
							<img src="../assets/<%- @document.image %>">
					</div>
					<div class="post-content" id="post-content">
						<%- @content %>
					</div>
				</article>
				<div id="disqus_thread"></div>
			    <script type="text/javascript">
			    	// Disqus
			       var disqus_shortname="webvisao";(function(){var e=document.createElement("script");e.type="text/javascript";e.async=true;e.src="//"+disqus_shortname+".disqus.com/embed.js";(document.getElementsByTagName("head")[0]||document.getElementsByTagName("body")[0]).appendChild(e)})()
			        // Google Analitycs
			        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			        	(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			        	m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			        ga('create', 'UA-43049167-1', 'webvisao.eu');
			        ga('send', 'pageview');
			    </script>
			</section>
		</div>
	    <!-- Javascript -->
	    <%- @getBlock("scripts").add(['/assets/js/blog.js']).toHTML() %>
			</div>
		<footer>
		</footer>
	</body>
</html>
</html>