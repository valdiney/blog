---
layout: default
title: Arquivo
---
<% for post in @getCollection("posts").toJSON(): %>
<article class="arquivo">
	<div class="data_left">
		<h2>
		<script>
			var data = new Date("<%- post.date %>");
			document.write(data.getDate() + "/" + data.getMonth() + "/" + data.getFullYear());
		</script> | Por: <%- post.autor %> |
		</h2>
	</div>
	<div class="data_left">
		<h2><a href="<%- post.url %>"><%- post.title %></a></h2>
	</div>
</article>
<% end %>